{
  "name": "lipemat/wp-phpcs",
  "description": "PHP Codesniffer for a WordPress plugin",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "lipemat",
      "email": "mat@matlipe.com"
    }
  ],
  "archive": {
    "exclude": ["/dev"]
  },
  "config": {
    "vendor-dir": "vendor",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/lipemat/WordPress-Coding-Standards"
    }
  ],
  "require": {
    "php": ">=5.6.20",
    "squizlabs/php_codesniffer": "^3.6.1",
    "wp-coding-standards/wpcs": "^2.3.0.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "automattic/vipwpcs": "^2.3.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1.2"
  }
}
